{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "format": "npx prettier --write .",
    "build:css": "node-sass ./scss -o ./app/styles --output-style compressed",
    "dev:css": "npm run build:css && node-sass -rw ./scss -o ./app/styles",
    "build": "npm run format && remix build",
    "dev": "npm run format && cross-env NODE_ENV=development netlify dev",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@editorjs/editorjs": "^2.24.3",
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "marked": "^4.0.16",
    "node-sass": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "prettier": "2.6.2",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
